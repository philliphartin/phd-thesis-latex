issn = {14677881},
journal = {Obesity Reviews},
keywords = {Cognitive decline,Obesity,Overweight,Review},
pmid = {21348917},
title = {{Body mass index in midlife and late-life as a risk factor for dementia: A meta-analysis of prospective studies}},
volume = {12},
year = {2011}
}
