keywords = {Aged,Aged, 80 and over,Alzheimer Disease,Cognition Disorders,Epidemiologic Studies,Female,Humans,Interpersonal Relations,Longitudinal Studies,Male,Memory,Risk Factors,Social Support,complications,etiology,prevention {\&} control,psychology,rehabilitation},
language = {eng},
month = {may},
number = {5},
pages = {406--412},
