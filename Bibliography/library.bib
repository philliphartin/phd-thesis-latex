journal = {Dementia and Geriatric Cognitive Disorders},
keywords = {Alzheimer's dementia,Cholesterol,Dementia,Epidemiology,Vascular dementia},
pages = {75--80},
pmid = {19648749},
title = {{Midlife serum cholesterol and increased risk of Alzheimer's and vascular dementia three decades later}},
