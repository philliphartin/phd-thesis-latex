@article{Small2007,
abstract = {BACKGROUND: Following prescribed medication regimens is essential for the effective treatment of any medical condition. Unfortunately, patients often fail to follow recommendations, and treatment non-compliance represents a widespread, often underestimated problem, placing tremendous burden on the healthcare system. Compliance in Alzheimer's disease (AD), a chronic neurodegenerative disease typically afflicting older adults, is especially challenging.

