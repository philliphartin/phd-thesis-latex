issn = {1469-493X (Electronic)},
journal = {The Cochrane database of systematic reviews},
keywords = {Aged,Aged, 80 and over,Cognition Disorders,Dementia,Fatty Acids, Omega-3,Female,Humans,Male,Randomized Controlled Trials as Topic,prevention {\&} control,therapeutic use},
