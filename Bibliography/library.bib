title = {{Compliance with aspirin or placebo in the hypertension optimal treatment (HOT) study}},
url = {http://journals.lww.com/jhypertension/Abstract/1999/17070/Compliance{\_}with{\_}aspirin{\_}or{\_}placebo{\_}in{\_}the.22.aspx},
volume = {17},
year = {1999}
